<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<bean id="propConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
<property name="locations" value="resources/prop.properties"></property>
</bean>

<bean id="rocket" class="com.account.init.resource.Rocket" >
<property name="country" value="India"></property>
<property name="launchingDate" >
<bean factory-bean="dateFormat" factory-method="parse">
<constructor-arg value="2000-10-01"></constructor-arg></bean> 
</property> 
<property name="cost" value="60670.99"></property>

</bean>

<bean id="dateFormat" class="java.text.SimpleDateFormat">
<constructor-arg value="yyyy-MM-dd"></constructor-arg>
</bean>

<bean id="rocketDAO" class="com.account.init.resource.RocketDAO" init-method="initResource">
<property name="driverClass" value="com.mysql.cj.jdbc.driver"></property>
<property name="url" value="jdbc:mysql://localhost:3306/"></property>
<property name="userId" value="${jdbc.userId}"></property>
<property name="password" value="root"></property>
</bean>



</beans>